<div class="page-header">
  <h1 class="title mb-5 pt-5">お問い合わせ内容確認</h1>
</div>

<%= form_with model: @inquiry, url: inquiries_thanks_path, local: true do |f| %>
  
  <div class="form-group">
    <%= f.label :email, "メールアドレス", class: "label" %>
    <%= f.text_field :email, class: "form-control", readonly: true, size: "30", value: "#{@inquiry.email}" %>
  </div>

  <div class="form-group">
    <%= f.label :message, "お問い合わせ内容", class: "label" %>
    <%= f.text_area :message, class: "form-control", readonly: true, size: "50x10", value: "#{@inquiry.message}" %>
  </div>

  <%= f.submit '送信する', class: 'btn btn-primary mb-3' %>
<% end %>

<%= link_to "お問い合わせを入力し直す", home_inquire_path, class: 'btn btn-secondary' %>