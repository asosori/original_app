<div class="page-header">
    <h1 class="title mb-5 pt-5">お問い合わせ</h1>
</div>

<%= form_with model: @inquiry, url: home_inquire_path, local: true do |f| %>
  <%= render "shared/errors", obj: @inquiry %>

  <div class="form-group">
    <%= f.label :email, "メールアドレス", class: "label" %>
    <%= f.text_field :email, class: "form-control", size: "30" %>
  </div>

  <div class="form-group">
    <%= f.label :message, "お問い合わせ内容", class: "label" %>
    <%= f.text_area :message, class: "form-control", size: "50x10" %>
  </div>

  <%= f.submit '確認', class: 'btn btn-primary' %>
<% end %>