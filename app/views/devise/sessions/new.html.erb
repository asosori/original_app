<h1 class="title mb-5 mt-5">ログイン画面</h1>

<p class="mypage-menu">test1@example.comとfoobarでログインできます。</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: "label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", value: "test1@example.com", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", value: "foobar", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "label" %>
    </div>
  <% end %>

  <%= f.submit "ログイン", class: "btn btn-primary mt-3" %>
<% end %>

<div class="mt-3">
  <%= render "devise/shared/links" %>
</div>
