<!DOCTYPE html>
<html>
  <head>
    <title>OriginalApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container">
          <strong><%= link_to "ゼミラボナビ", root_path, class: "navbar-brand text-white" %></strong>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                  <%= link_to "口コミ投稿", new_post_path, class: "nav-link text-white" %>
                </li>
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to "マイページ", current_user, class: "nav-link text-white" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link text-white" %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to "ログイン", new_user_session_path, class: "nav-link text-white" %>
                </li>
              <% end %>
                <li class="nav-item">
                  <%= link_to "お問い合わせ", home_inquire_path, class: "nav-link text-white" %>
                </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <div class="main-container pt-3 pb-5">
      <div class="container">
        <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= bootstrap_class_for(message_type) %>" >
              <a class="close" data-dismiss="alert" aria-label="Close">×</a>
              <%= message %>
            </div>
        <% end %>
        
        <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-10 offset-sm-1 col-12">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
