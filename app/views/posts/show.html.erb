<div id="post-<%= @post.id %>" data-post-id="<%= @post.id %>">
  <h1><%= @post.university %><%= @post.department %><%= @post.major %><%= @post.professor %>研究室の口コミ</h1>
  <h2><%= @user.username %>さんによる口コミ</h2>
  <p><%= @post.detail %></p>
  <%= render "likes/like", post: @post %>
</div>

<%= link_to '戻る', :back %> 

<% if user_signed_in? && current_user == @user %>
  <%= link_to "投稿を編集する", edit_post_path(@post) %>
  <%= link_to "投稿を削除する", @post, method: :delete, data: { confirm: "本当に削除しますか?" } %>
<% end %>
